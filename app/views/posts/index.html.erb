<section id="contentino" data-info="main">
    <header>
        <div class="left">
            <div class="sort">Сортировка новостей <i class="time"></i><i class="like"></i></div>
            <div class="create">
              <%= link_to(new_post_path) do %>
              Создать новость <i class="create"></i>
              <% end %>
            </div>
        </div>
        <div class="right">
            <form class="form-search">
              <input type="text" class="input-medium search-query" placeholder="поиск по сайту">
              <button type="submit" class="btn">Search</button>
            </form>
        </div>
    </header>
    <div class="contentBlock row">
        <ul class="thumbnails">
            <% @posts.each do |post| %>
            <li class="span3">
                <div class="thumbnail">
                    <%= link_to image_tag("fake/3.jpg"), post_path(post) %>
                    <div class="caption">
                        <h5 data-type="restaurant">Рестораны</h5><!-- hotel, restaurant -->
                        <% if((user_signed_in?) && (current_user.has_role? :admin)) %>
                            <%= link_to "", edit_post_path(post), class: 'edit'  %>
                        <% end %>
                        <p>
                          <%= link_to(post_path(post)) do %>
                          <%= truncate(post.description, length: 50) %>
                          <% end %>
                        </p>
                        <div class="bottom">
                            <div class="left">
                                <div><a href="" class="name">nike sports</a></div>
                                <div class="likes">
                                    <i class="top"></i>
                                    <span>217</span>
                                    <i class="down"></i>
                                </div>
                                <time>17 сентября</time>
                            </div>
                            <div class="right">
                                <a href="" class="comments"><i></i>13</a>
                                <p class="views"><i></i>2245</p>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <% end %>
        </ul>
        <!--<div class="rightPart"></div>-->
        <div class="pagination">
            <ul>
                <li><a href="#">← Назад</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li class="highlight"><a href="#">Вперед →</a></li>
            </ul>
        </div>
        <div id="backToTop" onclick="javascript:scroll(0,0)">На самый верх</div>
    </div>
</section>